{{ if gt .Paginator.TotalPages 1 }}
  <nav class="container" aria-label="page navigation">
    <div class="row row-cols-2">
      <div class="col text-end">
        {{ if .Paginator.HasPrev }}
          <a href="{{ .Paginator.Prev.URL }}" class="pagination--btn btn btn-secondary">Trước</a>
        {{ else }}
          <a class="pagination--btn btn btn-outline-secondary disabled">Trước</a>
        {{ end }}
      </div>
      <div class="col text-start">
        {{ if .Paginator.HasNext }}
          <a href="{{ .Paginator.Next.URL }}" class="pagination--btn btn btn-dark">Tiếp</a>
        {{ else }}
          <a class="pagination--btn btn btn-outline-dark disabled">Tiếp</a>
        {{ end }}
      </div>
    </div>
  </nav>
{{ end }}
